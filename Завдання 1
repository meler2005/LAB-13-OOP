namespace Lab_13__1
{
    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();
        }

        private void Form1_MouseDown(object sender, MouseEventArgs e)
        {
            int moveOffset = 20; // Кількість пікселів для переміщення

            if (e.Button == MouseButtons.Right)
            {
                // Переміщення вправо
                this.Left += moveOffset;
            }
            else if (e.Button == MouseButtons.Left)
            {
                // Переміщення вліво
                this.Left -= moveOffset;
            }
        }
    }
}
